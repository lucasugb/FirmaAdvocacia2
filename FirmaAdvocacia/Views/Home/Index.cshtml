@{
    ViewData["Title"] = "Firma Advocacia";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-80">
            <div class="col-lg-6">
                <h1 class="hero-title text-warning-custom">
                    FIRMA <span class="text-light">ADVOCACIA</span>
                </h1>
                <p class="hero-subtitle text-light fs-4 mb-4">
                    Excelência em soluções jurídicas com <span class="text-warning-custom">15 anos</span> de tradição
                </p>
                <p class="hero-description text-light mb-5">
                    Oferecemos assessoria jurídica personalizada e estratégica para proteger
                    seus direitos e interesses com a máxima competência e ética profissional.
                </p>
                <div class="hero-buttons">
                    <a href="#" class="btn btn-warning-custom btn-lg me-3">
                        <i class="fas fa-phone me-2"></i>Fale Conosco
                    </a>
                    <a href="#" class="btn btn-outline-warning-custom btn-lg">
                        <i class="fas fa-clock me-2"></i>Agende uma Consulta
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-icon">
                    <i class="fas fa-balance-scale"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Áreas de Atuação -->
<section class="areas-section py-5">
    <div class="container">
        <h2 class="section-title text-center text-warning-custom mb-5">ÁREAS DE ATUAÇÃO</h2>

        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="area-card">
                    <div class="area-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h4 class="area-title">Direito Empresarial</h4>
                    <p class="area-description">Assessoria jurídica completa para empresas e negócios</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="area-card">
                    <div class="area-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h4 class="area-title">Direito Imobiliário</h4>
                    <p class="area-description">Regularização e questões patrimoniais imobiliárias</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="area-card">
                    <div class="area-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <h4 class="area-title">Direito Civil</h4>
                    <p class="area-description">Defesa de direitos individuais e familiares</p>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="area-card">
                    <div class="area-icon">
                        <i class="fas fa-gavel"></i>
                    </div>
                    <h4 class="area-title">Direito Trabalhista</h4>
                    <p class="area-description">Defesa de direitos trabalhistas e previdenciários</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Diferenciais -->
<section class="features-section py-5 bg-black-custom">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="text-warning-custom mb-4">Por que escolher nossa firma?</h2>
                <div class="feature-item">
                    <i class="fas fa-star text-warning-custom"></i>
                    <div>
                        <h5 class="text-light">Experiência Comprovada</h5>
                        <p class="text-light">15 anos atuando no mercado jurídico</p>
                    </div>
                </div>
                <div class="feature-item">
                    <i class="fas fa-shield-alt text-warning-custom"></i>
                    <div>
                        <h5 class="text-light">Atendimento Personalizado</h5>
                        <p class="text-light">Soluções específicas para cada caso</p>
                    </div>
                </div>
                <div class="feature-item">
                    <i class="fas fa-trophy text-warning-custom"></i>
                    <div>
                        <h5 class="text-light">Alta Taxa de Sucesso</h5>
                        <p class="text-light">98% dos casos resolvidos favoravelmente</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="stats-card">
                    <h3 class="text-warning-custom text-center mb-4">Nossos Números</h3>
                    <div class="stats-grid">
                        <div class="stat">
                            <div class="stat-number text-warning-custom">+500</div>
                            <div class="stat-label text-light">Clientes</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number text-warning-custom">15+</div>
                            <div class="stat-label text-light">Anos</div>
                        </div>
                        <div class="stat">
                            <div class="stat-number text-warning-custom">98%</div>
                            <div class="stat-label text-light">Sucesso</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>